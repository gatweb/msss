{
    "name": "msss/donation-platform",
    "description": "Plateforme de gestion des dons pour Msss",
    "type": "project",
    "require": {
        "php": ">=8.2.0",
        "stripe/stripe-php": "^13.14",
        "vlucas/phpdotenv": "^5.6",
        "twig/twig": "^3.10"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.58",
        "phpstan/phpstan": "^1.11",
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "check:types": "vendor/bin/phpstan analyse --memory-limit=512M",
        "lint": "vendor/bin/php-cs-fixer fix --dry-run --diff --quiet",
        "lint:fix": "vendor/bin/php-cs-fixer fix",
        "check": [
            "@lint",
            "@check:types",
            "@test"
        ]
    }
}
