{% extends 'layouts/base.twig' %}

{% block title %}Authentication - {{ parent() }}{% endblock %}

{% block head_assets %}
    {{ parent() }}
    <link rel="icon" type="image/png" href="/assets/img/favicon.png">
    <link rel="stylesheet" href="{{ asset('build/app.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" referrerpolicy="no-referrer" />
{% endblock %}

{% block body_class %}bg-slate-50 font-sans min-h-screen flex items-center justify-center{% endblock %}

{% block body %}
    <div class="w-full max-w-md p-6">
        {# Logo or Brand #}
        <div class="text-center mb-8">
            <a href="/" class="inline-flex items-center gap-2 text-2xl font-heading font-bold text-primary-600 hover:text-primary-700 transition-colors">
                {% if appName() %}
                    <span>{{ appName() }}</span>
                {% else %}
                    <span class="text-3xl">✨</span>
                    <span>Msss</span>
                {% endif %}
            </a>
        </div>

        {# Main Content Card #}
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-slate-100">
            {# Flash Messages #}
            {% set messages = flash_messages() %}
            {% if messages %}
                <div class="p-4 bg-slate-50 border-b border-slate-100">
                    {% for message in messages %}
                        <div class="flex items-center gap-3 text-sm p-3 rounded-lg mb-2 last:mb-0
                            {% if message.type == 'error' %}bg-red-50 text-red-700 border border-red-100
                            {% elseif message.type == 'success' %}bg-green-50 text-green-700 border border-green-100
                            {% else %}bg-blue-50 text-blue-700 border border-blue-100{% endif %}">
                            
                            {% if message.type == 'error' %}
                                <i class="fas fa-exclamation-circle shrink-0"></i>
                            {% elseif message.type == 'success' %}
                                <i class="fas fa-check-circle shrink-0"></i>
                            {% else %}
                                <i class="fas fa-info-circle shrink-0"></i>
                            {% endif %}
                            
                            <span>{{ message.message }}</span>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}

            <div class="p-8">
                {% block content %}{% endblock %}
            </div>
        </div>

        {# Footer/Links #}
        <div class="mt-8 text-center text-sm text-slate-500">
            <p>&copy; {{ 'now'|date('Y') }} {{ appName()|default('Msss') }}. Tous droits réservés.</p>
            <div class="mt-2 space-x-4">
                <a href="/" class="hover:text-primary-600 transition-colors">Accueil</a>
                <a href="#" class="hover:text-primary-600 transition-colors">Confidentialité</a>
                <a href="#" class="hover:text-primary-600 transition-colors">Aide</a>
            </div>
        </div>
    </div>
{% endblock %}
