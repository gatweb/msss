
<div class="container">
    <h1>Dons reçus</h1>
    {% if donations is not empty %}
        <table class="table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Donateur</th>
                    <th>Montant</th>
                    <th>Type</th>
                    <th>Commentaire</th>
                </tr>
            </thead>
            <tbody>
                {% for donation in donations %}
                    <tr>
                        <td>{{ donation.created_at|default('-') }}</td>
                        <td>{{ donation.donor_name|default('-') }}</td>
                        <td>{{ donation.amount|default('0') }} €</td>
                        <td>{{ donation.donation_type|default('-') }}</td>
                        <td>{{ donation.comment|default('-') }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="alert alert-info">Aucun don enregistré pour le moment.</div>
    {% endif %}
    <hr>
    <h3>Objectif : {{ donation_goal|default(0) }} €</h3>
    <div>Montant total reçu : <strong>{{ total_donations|default(0) }} €</strong></div>
    <div>Progression : <strong>{{ progress_percentage|default(0) }} %</strong></div>
</div>
