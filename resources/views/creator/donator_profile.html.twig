{% extends 'layouts/creator_dashboard.twig' %}

{% block content %}
<!-- Back Button -->
<div class="mb-6">
    <a href="/dashboard/donators" class="inline-flex items-center gap-2 text-gray-500 hover:text-blue-600 transition-colors font-medium">
        <i class="fas fa-arrow-left"></i> Retour √† la liste
    </a>
</div>

<!-- Profile Header -->
<div class="bg-white/80 backdrop-blur-xl border border-white/50 rounded-2xl shadow-xl p-8 mb-8 relative overflow-hidden group">
    <div class="absolute top-0 left-0 w-full h-2 bg-gradient-to-r from-blue-500 via-indigo-500 to-purple-500"></div>
    <div class="absolute -right-10 -top-10 w-32 h-32 bg-blue-50 rounded-full blur-3xl opacity-50 group-hover:opacity-100 transition duration-700"></div>

    <div class="flex flex-col md:flex-row items-start md:items-center gap-6 relative z-10">
        <!-- Avatar -->
        <div class="w-20 h-20 rounded-2xl bg-gradient-to-br from-blue-100 to-indigo-100 text-blue-600 flex items-center justify-center text-3xl font-bold shadow-inner">
            {{ donator.donor_name|first|upper }}
        </div>
        
        <!-- Info -->
        <div class="flex-grow">
            <h1 class="text-3xl font-extrabold text-gray-900 flex items-center gap-3 flex-wrap">
                {{ donator.donor_name }}
                
                {% set status_labels = {
                    'client': ['Client', 'bg-emerald-100 text-emerald-800 border-emerald-200'],
                    'indesirable': ['Ind√©sirable', 'bg-red-100 text-red-800 border-red-200'],
                    'attente': ['En attente', 'bg-orange-100 text-orange-800 border-orange-200'],
                    'prospect': ['Prospect', 'bg-blue-100 text-blue-800 border-blue-200'],
                    'ancien': ['Ancien', 'bg-gray-100 text-gray-800 border-gray-200'],
                } %}
                {% set status = notes.crm_status|default('prospect') %}
                {% if status_labels[status] is defined %}
                    <span class="px-3 py-1 rounded-full text-sm font-medium border {{ status_labels[status][1] }} shadow-sm">
                        {{ status_labels[status][0] }}
                    </span>
                {% endif %}
            </h1>
            <p class="text-gray-500 font-medium">{{ donator.donor_email }}</p>
        </div>

        <!-- Stats -->
        <div class="flex gap-6 bg-gray-50/80 p-4 rounded-xl border border-gray-100">
            <div class="text-center">
                <p class="text-xs text-gray-500 uppercase font-semibold tracking-wider">Total Dons</p>
                <p class="text-xl font-bold text-gray-900">{{ donator.total_amount|number_format(2, ',', ' ') }} ‚Ç¨</p>
            </div>
            <div class="w-px bg-gray-200"></div>
            <div class="text-center">
                <p class="text-xs text-gray-500 uppercase font-semibold tracking-wider">Dernier Don</p>
                <p class="text-xl font-bold text-gray-900">{{ donator.last_donation ? donator.last_donation|date('d/m/Y') : '-' }}</p>
            </div>
        </div>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- CRM Form -->
    <div class="lg:col-span-2">
        <div class="bg-white/80 backdrop-blur-xl border border-white/50 rounded-2xl shadow-xl p-8 h-full">
            <h2 class="text-xl font-bold text-gray-900 mb-6 flex items-center gap-2">
                <i class="fas fa-user-edit text-blue-500"></i> Suivi & Notes
            </h2>

            <form method="post" action="#" class="space-y-6">
                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="crm_phone" class="block text-sm font-semibold text-gray-700 mb-1">T√©l√©phone</label>
                        <div class="relative">
                            <i class="fas fa-phone absolute left-3 top-3 text-gray-400 text-sm"></i>
                            <input type="text" id="crm_phone" name="crm_phone" value="{{ notes.crm_phone|default('') }}" class="block w-full pl-9 rounded-xl border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 bg-gray-50/50 py-2.5 sm:text-sm" placeholder="Num√©ro de t√©l√©phone">
                        </div>
                    </div>
                    <div>
                        <label for="crm_status" class="block text-sm font-semibold text-gray-700 mb-1">Statut</label>
                         <div class="relative">
                            <i class="fas fa-tag absolute left-3 top-3 text-gray-400 text-sm"></i>
                            <select id="crm_status" name="crm_status" class="block w-full pl-9 rounded-xl border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 bg-gray-50/50 py-2.5 sm:text-sm appearance-none">
                                <option value="prospect" {{ (notes.crm_status|default('')) == 'prospect' ? 'selected' : '' }}>Prospect</option>
                                <option value="client" {{ (notes.crm_status|default('')) == 'client' ? 'selected' : '' }}>Client</option>
                                <option value="ancien" {{ (notes.crm_status|default('')) == 'ancien' ? 'selected' : '' }}>Ancien</option>
                                <option value="attente" {{ (notes.crm_status|default('')) == 'attente' ? 'selected' : '' }}>En attente</option>
                                <option value="indesirable" {{ (notes.crm_status|default('')) == 'indesirable' ? 'selected' : '' }}>Ind√©sirable</option>
                            </select>
                             <i class="fas fa-chevron-down absolute right-3 top-3 text-gray-400 text-sm pointer-events-none"></i>
                        </div>
                    </div>
                </div>

                <div class="bg-blue-50/50 rounded-xl p-4 border border-blue-50">
                    <label class="block text-sm font-semibold text-gray-700 mb-3">Pr√©f√©rences</label>
                    <div class="flex flex-wrap gap-4">
                        <label class="inline-flex items-center gap-2 cursor-pointer group">
                            <input type="checkbox" name="pref_gift" {{ notes.pref_gift is not empty ? 'checked' : '' }} class="rounded text-blue-600 focus:ring-blue-500 border-gray-300 w-4 h-4">
                            <span class="text-sm text-gray-600 group-hover:text-blue-600 transition-colors">üéÅ Aime les cadeaux</span>
                        </label>
                        <label class="inline-flex items-center gap-2 cursor-pointer group">
                            <input type="checkbox" name="pref_anonymous" {{ notes.pref_anonymous is not empty ? 'checked' : '' }} class="rounded text-blue-600 focus:ring-blue-500 border-gray-300 w-4 h-4">
                            <span class="text-sm text-gray-600 group-hover:text-blue-600 transition-colors">üï∂Ô∏è Pr√©f√®re l'anonymat</span>
                        </label>
                         <label class="inline-flex items-center gap-2 cursor-pointer group">
                            <input type="checkbox" name="pref_birthday" {{ notes.pref_birthday is not empty ? 'checked' : '' }} class="rounded text-blue-600 focus:ring-blue-500 border-gray-300 w-4 h-4">
                            <span class="text-sm text-gray-600 group-hover:text-blue-600 transition-colors">üéÇ Anniversaire √† f√™ter</span>
                        </label>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="crm_source" class="block text-sm font-semibold text-gray-700 mb-1">Source</label>
                        <input type="text" id="crm_source" name="crm_source" value="{{ notes.crm_source|default('') }}" class="block w-full rounded-xl border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 bg-gray-50/50 py-2.5 sm:text-sm" placeholder="Ex: R√©seaux sociaux">
                    </div>
                    <div>
                        <label for="crm_birthday" class="block text-sm font-semibold text-gray-700 mb-1">Anniversaire</label>
                        <input type="date" id="crm_birthday" name="crm_birthday" value="{{ notes.crm_birthday ? notes.crm_birthday|date('Y-m-d') : '' }}" class="block w-full rounded-xl border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 bg-gray-50/50 py-2.5 sm:text-sm">
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-3">Suivi</label>
                    <div class="flex flex-wrap gap-4">
                         <label class="inline-flex items-center gap-2 cursor-pointer group">
                            <input type="checkbox" name="merci_envoye" {{ notes.merci_envoye is not empty ? 'checked' : '' }} class="rounded text-green-600 focus:ring-green-500 border-gray-300 w-4 h-4">
                            <span class="text-sm text-gray-600 group-hover:text-green-600 transition-colors">‚úÖ Merci envoy√©</span>
                        </label>
                        <label class="inline-flex items-center gap-2 cursor-pointer group">
                            <input type="checkbox" name="cadeau_envoye" {{ notes.cadeau_envoye is not empty ? 'checked' : '' }} class="rounded text-green-600 focus:ring-green-500 border-gray-300 w-4 h-4">
                            <span class="text-sm text-gray-600 group-hover:text-green-600 transition-colors">üì¶ Cadeau exp√©di√©</span>
                        </label>
                        <label class="inline-flex items-center gap-2 cursor-pointer group">
                            <input type="checkbox" name="vip" {{ notes.vip is not empty ? 'checked' : '' }} class="rounded text-purple-600 focus:ring-purple-500 border-gray-300 w-4 h-4">
                            <span class="text-sm text-gray-600 group-hover:text-purple-600 transition-colors">üëë VIP</span>
                        </label>
                        <label class="inline-flex items-center gap-2 cursor-pointer group">
                            <input type="checkbox" name="fan_fidele" id="fan_fidele" {{ notes.fan_fidele is not empty ? 'checked' : '' }} class="rounded text-yellow-500 focus:ring-yellow-500 border-gray-300 w-4 h-4">
                            <span class="text-sm font-bold text-yellow-600 group-hover:text-yellow-700 transition-colors">‚≠ê Fan fid√®le</span>
                        </label>
                    </div>
                </div>

                <div>
                    <label for="commentaire" class="block text-sm font-semibold text-gray-700 mb-1">Commentaire interne</label>
                    <textarea id="commentaire" name="commentaire" rows="4" class="block w-full rounded-xl border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 bg-gray-50/50 sm:text-sm" placeholder="Ajoutez une note priv√©e...">{{ notes.commentaire|default('') }}</textarea>
                </div>

                <div class="flex justify-end pt-4">
                    <button type="submit" class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-blue-600 to-indigo-600 text-white font-bold rounded-xl shadow-lg hover:shadow-xl hover:-translate-y-0.5 transition-all duration-200">
                        <i class="fas fa-save"></i> Enregistrer
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- History Column -->
    <div class="lg:col-span-1 space-y-8">
        <!-- Actions -->
        <div class="bg-white/80 backdrop-blur-xl border border-white/50 rounded-2xl shadow-xl p-6">
            <h3 class="text-lg font-bold text-gray-900 mb-4">Actions Rapides</h3>
            <div class="space-y-3">
                 <a href="mailto:{{ donator.donor_email }}" class="flex items-center justify-center gap-2 w-full px-4 py-3 bg-white border border-gray-200 rounded-xl text-gray-700 hover:text-blue-600 hover:border-blue-300 hover:bg-blue-50 transition-all font-medium shadow-sm">
                    <i class="fas fa-envelope"></i> Envoyer un email
                </a>
                <button class="flex items-center justify-center gap-2 w-full px-4 py-3 bg-white border border-gray-200 rounded-xl text-gray-700 hover:text-purple-600 hover:border-purple-300 hover:bg-purple-50 transition-all font-medium shadow-sm">
                    <i class="fas fa-gift"></i> Envoyer un cadeau
                </button>
            </div>
        </div>

        <!-- History -->
        <div class="bg-white/80 backdrop-blur-xl border border-white/50 rounded-2xl shadow-xl p-6">
            <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center gap-2">
                <i class="fas fa-history text-blue-500"></i> Historique
            </h3>
            
            {% if donations is empty %}
                <p class="text-gray-500 text-sm italic">Aucun don enregistr√©.</p>
            {% else %}
                <div class="flow-root">
                    <ul role="list" class="-mb-8">
                        {% for don in donations %}
                        <li>
                            <div class="relative pb-8">
                                {% if not loop.last %}
                                    <span class="absolute top-4 left-4 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></span>
                                {% endif %}
                                <div class="relative flex space-x-3">
                                    <div>
                                        <span class="h-8 w-8 rounded-full bg-green-100 flex items-center justify-center ring-8 ring-white">
                                            <i class="fas fa-euro-sign text-green-600 text-xs"></i>
                                        </span>
                                    </div>
                                    <div class="flex min-w-0 flex-1 justify-between space-x-4 pt-1.5">
                                        <div>
                                            <p class="text-sm font-bold text-gray-900">{{ don.amount|number_format(2, ',', ' ') }} ‚Ç¨</p>
                                            {% if don.message %}
                                                <p class="text-xs text-gray-500 mt-1 italic">"{{ don.message }}"</p>
                                            {% endif %}
                                        </div>
                                        <div class="whitespace-nowrap text-right text-xs text-gray-500">
                                            <time datetime="{{ don.created_at }}">{{ don.created_at ? don.created_at|date('d/m/Y') : '' }}</time>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
